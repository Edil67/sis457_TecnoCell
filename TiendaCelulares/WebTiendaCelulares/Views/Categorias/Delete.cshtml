@model WebTiendaCelulares.Models.Categorium

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Eliminar Registro</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <strong>¿Estás seguro de eliminar este registro?</strong> Esta acción no se puede deshacer.
                    </div>
                    <dl class="row">
                        <dt class="col-sm-4">Descripcion</dt>
                        <dd class="col-sm-8">@Model.Descripcion</dd>
                        <!-- ...otros campos... -->
                    </dl>
                    <form asp-action="Delete" class="d-flex justify-content-between">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i> Eliminar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fa fa-arrow-left"></i> Cancelar
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>