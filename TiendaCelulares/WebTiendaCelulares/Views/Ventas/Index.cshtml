@model IEnumerable<WebTiendaCelulares.Models.Venta>

@{
    ViewData["Title"] = "Ventas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Lista de Ventas</h4>
            <div>
                <a asp-action="Create" class="btn btn-success">
                    <i class="fa fa-plus"></i> Nueva Venta
                </a>
                <a class="btn btn-sm btn-secondary" asp-controller="VentaDetalles" asp-action="Index">
                    <i class="fa fa-list"></i> Detalles de Ventas
                </a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Cédula de Cliente</th>
                        <th>Monto Pago</th>
                        
                        <th>Monto Cambio</th>
                        <th>Monto Total</th>
                        <th>Usuario Registro</th>
                        <th>Fecha Registro</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.DocumentoCliente)</td>
                            <td>@Html.DisplayFor(modelItem => item.MontoPago)</td>
                            <td>@Html.DisplayFor(modelItem => item.MontoCambio)</td>
                            <td>@Html.DisplayFor(modelItem => item.MontoTotal)</td>
                            <td>@Html.DisplayFor(modelItem => item.UsuarioRegistro)</td>
                            <td>@Html.DisplayFor(modelItem => item.FechaRegistro)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detalles">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Eliminar">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>