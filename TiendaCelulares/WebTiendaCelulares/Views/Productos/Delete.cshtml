@model WebTiendaCelulares.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Eliminar Producto</h4>
                </div>
                <div class="card-body">
                    <h5>¿Estás seguro que deseas eliminar este producto?</h5>
                    <dl class="row">
                        <dt class="col-sm-4">Nombre</dt>
                        <dd class="col-sm-8">@Model.Nombre</dd>
                        <dt class="col-sm-4">Modelo</dt>
                        <dd class="col-sm-8">@Model.Modelo</dd>
                        <dt class="col-sm-4">Marca</dt>
                        <dd class="col-sm-8">@Model.Marca</dd>
                        <dt class="col-sm-4">Color</dt>
                        <dd class="col-sm-8">@Model.Color</dd>
                        <dt class="col-sm-4">Descripción</dt>
                        <dd class="col-sm-8">@Model.Descripcion</dd>
                        <dt class="col-sm-4">Precio de Venta</dt>
                        <dd class="col-sm-8">@Model.PrecioVenta</dd>
                        <dt class="col-sm-4">Stock</dt>
                        <dd class="col-sm-8">@Model.Stock</dd>
                        <dt class="col-sm-4">Categoría</dt>
                        <dd class="col-sm-8">@Model.IdCategoria</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fa fa-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fa fa-trash"></i> Eliminar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>