@model WebTiendaCelulares.Models.Producto

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles de Producto</h1>

<div>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0">Detalles del Producto</h4>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">Nombre</dt>
                            <dd class="col-sm-8">@Model.Nombre</dd>
                            <dt class="col-sm-4">Modelo</dt>
                            <dd class="col-sm-8">@Model.Modelo</dd>
                            <dt class="col-sm-4">Marca</dt>
                            <dd class="col-sm-8">@Model.Marca</dd>
                            <dt class="col-sm-4">Color</dt>
                            <dd class="col-sm-8">@Model.Color</dd>
                            <dt class="col-sm-4">Descripción</dt>
                            <dd class="col-sm-8">@Model.Descripcion</dd>
                            <dt class="col-sm-4">Precio Venta</dt>
                            <dd class="col-sm-8">@Model.PrecioVenta</dd>
                            <dt class="col-sm-4">Stock</dt>
                            <dd class="col-sm-8">@Model.Stock</dd>
                            <dt class="col-sm-4">Usuario Registro</dt>
                            <dd class="col-sm-8">@Model.UsuarioRegistro</dd>
                            <dt class="col-sm-4">Fecha Registro</dt>
                            <dd class="col-sm-8">@Model.FechaRegistro</dd>
                        </dl>
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success">Editar</a>
                            <a asp-action="Index" class="btn btn-outline-secondary">Volver a la lista</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
