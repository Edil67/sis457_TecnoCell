@model WebTiendaCelulares.Models.Empleado

@{
    ViewData["Title"] = "Eliminar Empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Eliminar Empleado</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <strong>¿Estás seguro de eliminar este empleado?</strong> Esta acción no se puede deshacer.
                    </div>
                    <dl class="row">
                        <dt class="col-sm-4">Nombres</dt>
                        <dd class="col-sm-8">@Model.Nombres</dd>
                        <dt class="col-sm-4">Primer Apellido</dt>
                        <dd class="col-sm-8">@Model.PrimerApellido</dd>
                        <dt class="col-sm-4">Segundo Apellido</dt>
                        <dd class="col-sm-8">@Model.SegundoApellido</dd>
                        <dt class="col-sm-4">Dirección</dt>
                        <dd class="col-sm-8">@Model.Direccion</dd>
                        <dt class="col-sm-4">Celular</dt>
                        <dd class="col-sm-8">@Model.Celular</dd>
                        <dt class="col-sm-4">Cargo</dt>
                        <dd class="col-sm-8">@Model.Cargo</dd>
                    </dl>
                    <form asp-action="Delete" class="d-flex justify-content-between">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fa fa-trash"></i> Eliminar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fa fa-arrow-left"></i> Cancelar
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>