@model IEnumerable<WebTiendaCelulares.Models.Empleado>

@{
    ViewData["Title"] = "Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Lista de Empleados</h4>
            <a asp-action="Create" class="btn btn-success">
                <i class="fa fa-plus"></i> Nuevo Empleado
            </a>
        </div>
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Nombres</th>
                        <th>Primer Apellido</th>
                        <th>Segundo Apellido</th>
                        <th>Dirección</th>
                        <th>Celular</th>
                        <th>Cargo</th>
                        <th>Usuario Registro</th>
                        <th>Fecha Registro</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Nombres)</td>
                            <td>@Html.DisplayFor(modelItem => item.PrimerApellido)</td>
                            <td>@Html.DisplayFor(modelItem => item.SegundoApellido)</td>
                            <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                            <td>@Html.DisplayFor(modelItem => item.Celular)</td>
                            <td>@Html.DisplayFor(modelItem => item.Cargo)</td>
                            <td>@Html.DisplayFor(modelItem => item.UsuarioRegistro)</td>
                            <td>@Html.DisplayFor(modelItem => item.FechaRegistro)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detalles">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Eliminar">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>