@{
    ViewData["Title"] = "Home Page";
}

<!-- Modal -->
<div class="modal fade bg-white" id="templatemo_search" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="w-100 pt-1 mb-5 text-right">
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="" method="get" class="modal-content modal-body border-0 p-0">
            <div class="input-group mb-2">
                <input type="text" class="form-control" id="inputModalSearch" name="q" placeholder="Search ...">
                <button type="submit" class="input-group-text bg-success text-light">
                    <i class="fa fa-fw fa-search text-white"></i>
                </button>
            </div>
        </form>
    </div>
</div>



<!-- Start Banner Hero -->
<div id="template-mo-zay-hero-carousel" class="carousel slide" data-bs-ride="carousel">
    <ol class="carousel-indicators">
        <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="0" class="active"></li>
        <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="1"></li>
        <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="row p-5 m-0">
                <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                    <img class="img-fluid" src="/assets/img/banner_img_01.jpg" alt="">
                </div>
                <div class="col-lg-6 mb-0 d-flex align-items-center">
                    <div class="text-align-left align-self-center">
                        <h1 class="h1 text-success"><b>TecnoSucre</b> Store</h1>
                        <h3 class="h2">Lo mejor de celulares y tecnología</h3>
                        <p>
                            Bienvenido a TecnoSucre, tu tienda confiable en smartphones, accesorios y tecnología móvil. Descubrí nuestros productos más recientes, ofertas exclusivas y el mejor servicio. Equipate con lo último en innovación y rendimiento.
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="row p-5 m-0">
                <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                    <img class="img-fluid" src="/assets/img/banner_img_02.jpg" alt="Accesorios de celulares">
                </div>
                <div class="col-lg-6 mb-0 d-flex align-items-center">
                    <div class="text-align-left">
                        <h1 class="h1">Equipá tu celular</h1>
                        <h3 class="h2">Cargadores, fundas y audífonos</h3>
                        <p>
                            Encontrá los accesorios ideales para proteger, cargar y disfrutar más de tu dispositivo. Todo lo que necesitás, en un solo lugar.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <div class="carousel-item">
            <div class="row p-5 m-0">
                <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                    <img class="img-fluid" src="/assets/img/banner_img_03.jpg" alt="Ofertas de celulares">
                </div>
                <div class="col-lg-6 mb-0 d-flex align-items-center">
                    <div class="text-align-left">
                        <h1 class="h1">Ofertas que conectan</h1>
                        <h3 class="h2">Modelos en promoción</h3>
                        <p>
                            Renová tu equipo con descuentos especiales. Disponibles por tiempo limitado. ¡No te lo pierdas!
                        </p>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <a class="carousel-control-prev text-decoration-none w-auto ps-3" href="#template-mo-zay-hero-carousel" role="button" data-bs-slide="prev">
        <i class="fas fa-chevron-left"></i>
    </a>
    <a class="carousel-control-next text-decoration-none w-auto pe-3" href="#template-mo-zay-hero-carousel" role="button" data-bs-slide="next">
        <i class="fas fa-chevron-right"></i>
    </a>
</div>
<!-- End Banner Hero -->

<!-- Start Categories of The Month -->
<section class="container py-5">
    <div class="row text-center pt-3">
        <div class="col-lg-6 m-auto">
            <h1 class="h1">Categorías del Mes</h1>
            <p>
                Descubrí lo más buscado en celulares, energía portátil y accesorios esenciales para potenciar tu experiencia móvil.
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-4 p-5 mt-3">
            <a href="#"><img src="./assets/img/category_img_01.jpg" class="rounded-circle img-fluid border"></a>
            <h5 class="text-center mt-3 mb-3">Smartphones</h5>
            <p class="text-center"><a class="btn btn-success">Ver modelos</a></p>
        </div>
        <div class="col-12 col-md-4 p-5 mt-3">
            <a href="#"><img src="./assets/img/category_img_02.jpg" class="rounded-circle img-fluid border"></a>
            <h2 class="h5 text-center mt-3 mb-3">Cargadores y Energía</h2>
            <p class="text-center"><a class="btn btn-success">Ver cargadores</a></p>
        </div>
        <div class="col-12 col-md-4 p-5 mt-3">
            <a href="#"><img src="./assets/img/category_img_03.jpg" class="rounded-circle img-fluid border"></a>
            <h2 class="h5 text-center mt-3 mb-3">Accesorios</h2>
            <p class="text-center"><a class="btn btn-success">Ver accesorios</a></p>
        </div>
    </div>
</section>

<!-- End Categories of The Month -->

<script src="~/assets/js/jquery-1.11.0.min.js"></script>
<script src="~/assets/js/bootstrap.bundle.min.js"></script>
